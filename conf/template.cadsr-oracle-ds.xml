<?xml version="1.0" encoding="UTF-8"?>
<!--
    JBoss Server Configuration for the CDE Curation Tool, Sentinel Tool and Freestyle

    $Header: /share/content/gforge/cdecurate/cdecurate/conf/template.cadsr-oracle-ds.xml
    $Name: not supported by cvs2svn $
 -->
<datasources>
    <local-tx-datasource>
        <jndi-name>jdbc/caDSR</jndi-name>
        <connection-url>jdbc:oracle:thin:@@CADSR.DS.URL@</connection-url>
        <driver-class>oracle.jdbc.driver.OracleDriver</driver-class>
        <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.OracleExceptionSorter</exception-sorter-class-name>
        <check-valid-connection-sql>select 1 from dual</check-valid-connection-sql>
        <blocking-timeout-millis>10000</blocking-timeout-millis>
        <idle-timeout-minutes>1</idle-timeout-minutes>
        <max-pool-size>85</max-pool-size>
        <min-pool-size>0</min-pool-size>
        <application-managed-security/>
    </local-tx-datasource>
</datasources>